<div class="col-sm-8 blog-main">

   <h2><%= @blog.title %></h2>

   <%= render 'blog_breadcrumb' %>
    
  <div class="blog-body">
    <%= markdown @blog.body %>
  </div>

  <%= render 'comments/comment_form' %>   
  
  <!-- id and data-blog-id comes from blogs.coffee in channel -->
  <div id="comments" data-blog-id = "<%= @blog.id %>">
      <!-- rails looks for a partial _comment.html.erb-->
      <%= render @blog.comments %> 
  </div>

</div>

