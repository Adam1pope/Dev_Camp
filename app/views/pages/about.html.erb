<div class="app-card-container">
  <div class="card">
      <div class="about-me">
      <h1>About Me</h1>
      </div>

        <hr>

      <div class="row">
          <div class="col-md-5">
            <%= image_tag "profile.png", width: 300, alt: "profile image", class: 'profile-img' %>
            <div class="skills">
              <% @skills.each do |skill| %>
                <h4><%= skill.title %></h4>
                <div class="skill">
                  <div class="progress">
                    <div 
                      class="progress-bar progress-bar-striped bg-warning"
                      role="progressbar"
                      aria-valuenow="<%= skill.percent_utilized %>"
                      aria-valuemax="100"
                      style="width:<%= skill.percent_utilized %>%"
                    >
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

        <div class="col-md-7">
          <p>Pimpin' ain't eazy</p>

          <p>But somebody gotta do it.. </p>

          <p>
            <button
              class="btn btn-primary"
              type="button"
              data-toggle="collapse"
              data-target="#jobHistory"
              aria-expanded="false"
              aria-controls="jobHistory"
            >
              Job History
            </button>

            <button
              class="btn btn-primary"
              type="button"
              data-toggle="collapse"
              data-target="#education"
              aria-expanded="false"
              aria-controls="education"
            >
              Education 
            </button>

            <p>
              <div class="collapse" id="jobHistory">
                <div class="card card-body">
                  Certified P.I.M.P
                </div>
              </div>

              <div class="collapse" id="education">
                <div class="card card-body">
                  School of Hard Knocks PhD
                </div>
              </div>
            </p>
          </p>
      </div>
    </div>
  </div>
</div>





